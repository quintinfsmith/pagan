<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:top="0dp"
                android:left="0dp"
                android:right="3dp"
                android:bottom="3dp"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
    <item android:id="@+id/tintable_background">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_alt"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
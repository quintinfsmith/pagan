<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/llContextCol"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:paddingStart="@dimen/normal_padding"
android:paddingEnd="@dimen/normal_padding"
android:orientation="vertical"
xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/btnInsertBeat"
        android:theme="@style/icon_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/insert_beat"
        android:contentDescription="Insert Beat" />

    <Space
        android:layout_height="@dimen/normal_padding"
        android:layout_width="match_parent"/>

    <ImageView
        android:id="@+id/btnRemoveBeat"
        android:theme="@style/icon_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/remove_beat"
        android:contentDescription="Remove Beat" />
</LinearLayout>

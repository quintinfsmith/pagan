<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContextCol"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnInsertBeat"
        android:theme="@style/icon_button"
        app:srcCompat="@drawable/insert_beat"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:contentDescription="@string/cd_insert_beat" />

    <ImageButton
        android:id="@+id/btnRemoveBeat"
        android:theme="@style/icon_button"
        app:srcCompat="@drawable/remove_beat"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:layout_marginTop="@dimen/number_selector_spacing"
        android:contentDescription="@string/cd_remove_beat" />

    <ImageButton
        android:theme="@style/icon_button"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:src="@drawable/adjust"
        android:id="@+id/btnAdjust"
        android:layout_marginTop="@dimen/number_selector_spacing"
        android:contentDescription="@string/cd_adjust_selection"/>

    <ImageButton
        android:theme="@style/icon_button"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:src="@drawable/tag"
        android:id="@+id/btnTag"
        android:layout_marginTop="@dimen/number_selector_spacing"
        android:contentDescription="@string/cd_mark_section"/>

    <ImageButton
        android:theme="@style/icon_button"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:src="@drawable/untag"
        android:id="@+id/btnUntag"
        android:layout_marginTop="@dimen/number_selector_spacing"
        android:contentDescription="@string/cd_remove_section_mark"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnRemoveCtl"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:contentDescription="@string/cd_remove_control_line"
        android:theme="@style/icon_button"
        app:srcCompat="@drawable/remove_line" />

    <ImageView
        android:id="@+id/btnToggleCtl"
        android:layout_width="@dimen/icon_button_width"
        android:layout_height="@dimen/icon_button_height"
        android:contentDescription="@string/cd_hide_control_line"
        android:theme="@style/icon_button"
        app:srcCompat="@drawable/hide" />
</LinearLayout>

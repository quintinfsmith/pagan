<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContextLink"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/textView2"
        android:text="Tap a beat to link it"/>

    <ImageView
        android:theme="@style/icon_button"
        android:id="@+id/btnUnLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/unlink"
        android:padding="8dp"
        android:contentDescription="Remove Link" />

    <ImageView
        android:theme="@style/icon_button"
        android:id="@+id/btnUnLinkAll"
        android:src="@drawable/unlinkall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:contentDescription="Remove All Links"/>

    <ImageView
        android:theme="@style/icon_button"
        android:id="@+id/ibtnCancelLink"
        android:padding="8dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"/>
</LinearLayout>

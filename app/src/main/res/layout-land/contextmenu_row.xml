<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContextRow"
    android:orientation="vertical"
    style="@style/contextmenu_primary_inner">

    <Button
        style="@style/contextmenu_button"
        android:id="@+id/btnInsertLine"
        app:icon="@drawable/insert_line"
        android:contentDescription="@string/cd_insert_line" />

    <Button
        style="@style/contextmenu_button"
        android:id="@+id/btnRemoveLine"
        app:icon="@drawable/remove_line"
        android:contentDescription="@string/cd_remove_line" />

    <Button
        style="@style/contextmenu_button"
        app:icon="@drawable/adjust"
        android:id="@+id/btnAdjust"
        android:contentDescription="@string/cd_adjust_selection"/>

    <Button
        style="@style/contextmenu_button"
        android:id="@+id/btnChoosePercussion"
        android:lines="1"
        android:padding="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cd_set_percussion_instrument"
        android:text="" />

    <Button
        style="@style/contextmenu_button"
        android:id="@+id/btnToggleChannelCtl"
        app:icon="@drawable/ctl"
        android:contentDescription="@string/cd_show_effect_controls"/>

    <Space
        android:id="@+id/spacer"
        android:visibility="gone"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_width="0dp" />

</LinearLayout>

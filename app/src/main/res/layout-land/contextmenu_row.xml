<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContextRow"
    android:orientation="vertical"
    android:padding="@dimen/number_selector_spacing"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.qfs.pagan.ButtonIcon
        android:id="@+id/btnInsertLine"
        android:theme="@style/icon_button"
        app:srcCompat="@drawable/insert_line"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:contentDescription="Insert Line" />

    <com.qfs.pagan.ButtonIcon
        android:id="@+id/btnRemoveLine"
        android:theme="@style/icon_button"
        app:srcCompat="@drawable/remove_line"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:layout_marginTop="@dimen/number_selector_spacing"
        android:contentDescription="Remove Line" />

    <com.qfs.pagan.ButtonStd
        android:id="@+id/btnChoosePercussion"
        android:theme="@style/choose_percussion_button"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:layout_marginTop="@dimen/number_selector_spacing"
        android:text="Instrument..." />

    <com.qfs.pagan.ButtonIcon
        android:id="@+id/btnLineVolumePopup"
        android:theme="@style/icon_button"
        app:srcCompat="@drawable/volume"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        android:layout_marginTop="@dimen/number_selector_spacing"
        android:contentDescription="Line Volume"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <com.qfs.pagan.PaganSeekBar
            android:id="@+id/sbLineVolume"
            android:visibility="gone"
            android:max="127"
            android:min="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

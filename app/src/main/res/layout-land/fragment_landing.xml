<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:padding="4dp"
        android:orientation="vertical">

        <Space
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"/>

        <include layout="@layout/warning_no_soundfont" />

        <Space
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:padding="4dp"
        android:orientation="vertical">

        <Space
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"/>

        <Button
            style="@style/landing_button"
            android:id="@+id/btnMostRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_landing_most_recent"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/landing_button_space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="horizontal">

            <Button
                style="@style/landing_button"
                android:id="@+id/btnFrontNew"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_new"/>

            <Space
                android:id="@+id/space_load"
                android:layout_height="match_parent"
                android:layout_width="@dimen/landing_button_space_h" />

            <Button
                style="@style/landing_button"
                android:id="@+id/btnFrontLoad"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_load"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/landing_button_space" />

        <Button
            style="@style/landing_button"
            android:id="@+id/btnFrontImport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_landing_import"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/landing_button_space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="horizontal">

            <Button
                style="@style/landing_button"
                android:id="@+id/btnFrontSettings"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_settings"/>

            <Space
                android:layout_height="match_parent"
                android:layout_width="@dimen/landing_button_space_h" />

            <Button
                style="@style/landing_button"
                android:id="@+id/btnFrontAbout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_about"/>

        </LinearLayout>

        <Space
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/warning_wrapper"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <include layout="@layout/warning_no_soundfont" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/warning_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            style="@style/landing_button"
            android:id="@+id/btnMostRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_landing_most_recent"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/landing_button_space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="horizontal">

            <Button
                style="@style/landing_button"
                android:id="@+id/btnFrontNew"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_new"/>

            <Space
                android:id="@+id/space_load"
                android:layout_height="match_parent"
                android:layout_width="@dimen/landing_button_space_h" />

            <Button
                style="@style/landing_button"
                android:id="@+id/btnFrontLoad"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_load"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/landing_button_space" />

        <Button
            style="@style/landing_button"
            android:id="@+id/btnFrontImport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_landing_import"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/landing_button_space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="horizontal">

            <Button
                style="@style/landing_button"
                android:id="@+id/btnFrontSettings"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_settings"/>

            <Space
                android:layout_height="match_parent"
                android:layout_width="@dimen/landing_button_space_h" />

            <Button
                style="@style/landing_button"
                android:id="@+id/btnFrontAbout"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_about"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

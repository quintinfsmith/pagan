<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/landing_menu_width"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <include layout="@layout/warning_no_soundfont" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnMostRecent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_most_recent"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_padding" />

            <Button
                style="@style/Theme.Pagan.Button"
                android:id="@+id/btnFrontNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_new"/>

            <Space
                android:id="@+id/space_load"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_padding" />

            <Button
                style="@style/Theme.Pagan.Button"
                android:id="@+id/btnFrontLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_load"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_padding" />

            <Button
                style="@style/Theme.Pagan.Button"
                android:id="@+id/btnFrontImport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_import"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_padding" />

            <Button
                style="@style/Theme.Pagan.Button"
                android:id="@+id/btnFrontSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_settings"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_padding" />

            <Button
                style="@style/Theme.Pagan.Button"
                android:id="@+id/btnFrontAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_landing_about"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

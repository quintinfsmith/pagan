<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/contextmenu_secondary_inner"
    android:orientation="horizontal">
        <Button
            android:id="@+id/btnMuteChannel"
            app:icon="@drawable/mute"
            style="@style/contextmenu_button"
            android:layout_height="match_parent"
            android:contentDescription="@string/cd_channel_mute"/>

        <Space
            android:layout_height="match_parent"
            android:layout_width="2dp" />

        <Button
            style="@style/contextmenu_button"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/btnChooseInstrument"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="" />
</LinearLayout>

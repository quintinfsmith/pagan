<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llContextLink"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/rgLinkMode"
            android:orientation="horizontal"
            android:checkedButton="@id/rbLinkModeLink"
            android:layout_height="wrap_content"
            android:minHeight="41dp"
            android:layout_width="0dp"
            android:layout_weight="1">
                <com.qfs.pagan.PaganRadioButton
                    android:id="@+id/rbLinkModeCopy"
                    android:layout_margin="0dp"
                    android:theme="@style/link_mode_button"
                    android:text="@string/label_copy_ctl"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <com.qfs.pagan.PaganRadioButton
                    android:id="@+id/rbLinkModeMove"
                    android:layout_margin="0dp"
                    android:theme="@style/link_mode_button"
                    android:text="@string/label_move_ctl"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"/>
        </RadioGroup>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.qfs.pagan.ButtonIcon
            android:theme="@style/icon_button"
            android:layout_width="@dimen/icon_button_width"
            android:layout_height="@dimen/icon_button_height"
            android:layout_marginStart="@dimen/number_selector_spacing"
            android:src="@drawable/unset"
            android:id="@+id/btnEraseSelection"
            android:contentDescription="Clear Selection"/>
</LinearLayout>
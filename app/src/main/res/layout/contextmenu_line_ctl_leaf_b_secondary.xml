<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llContextLink"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/contextmenu_secondary_inner"
    android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RadioGroup
            android:id="@+id/rgMoveMode"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
                <RadioButton
                    android:id="@+id/rbMoveModeCopy"
                    style="@style/radio_button_start"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/label_copy_ctl"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"/>
                <Space
                    android:layout_width="3dp"
                    android:layout_height="match_parent"/>
                <RadioButton
                    android:id="@+id/rbMoveModeMove"
                    style="@style/radio_button_end"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/label_move_ctl"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"/>
                </RadioGroup>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
</LinearLayout>
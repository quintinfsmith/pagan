<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llContextLink"
    android:padding="@dimen/number_selector_spacing"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/tvMoveModeLabelB"/>

    <RadioGroup
        android:id="@+id/rgMoveMode"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:minHeight="41dp"
        android:layout_width="match_parent">
        <RadioButton
            android:id="@+id/rbMoveModeMerge"
            android:visibility="gone"
            style="@style/link_mode_button"
            android:text="@string/rb_mm_merge"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <RadioButton
            android:id="@+id/rbMoveModeCopy"
            style="@style/link_mode_button_start"
            android:text="@string/rb_mm_copy"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"/>
        <Space
            android:layout_width="3dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rbMoveModeMove"
            style="@style/link_mode_button_end"
            android:text="@string/rb_mm_move"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </RadioGroup>
</LinearLayout>

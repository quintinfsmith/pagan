<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/volume_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_echo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/echo"
        app:layout_constraintEnd_toEndOf="@id/echo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_echo"
        app:tint="@color/context_menu_background_icon" />

    <com.qfs.pagan.RangedIntegerInput
        android:id="@+id/echo"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/numerator"
        app:layout_constraintEnd_toEndOf="@id/numerator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_hz"
        app:tint="@color/context_menu_background_icon" />

    <com.qfs.pagan.RangedIntegerInput
        android:id="@+id/numerator"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/echo"
        app:layout_constraintEnd_toStartOf="@id/denominator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/numerator"
        app:layout_constraintEnd_toEndOf="@id/denominator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="/"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/denominator"
        app:layout_constraintEnd_toEndOf="@id/denominator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_hz"
        app:tint="@color/context_menu_background_icon" />

    <com.qfs.pagan.RangedIntegerInput
        android:id="@+id/denominator"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/numerator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fade_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@id/fade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fade"
        app:layout_constraintStart_toStartOf="@id/fade"
        android:text="@string/contextmenu_delay_attenuation"/>

    <SeekBar
        android:id="@+id/fade"
        android:max="128"
        android:min="0"
        app:layout_constraintTop_toBottomOf="@id/fade_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/denominator"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>

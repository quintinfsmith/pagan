<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.qfs.pagan.PaganTextView
        android:clickable="true"
        android:id="@+id/linkLicense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/license_brief"
        android:theme="@style/front_text" />

    <com.qfs.pagan.PaganTextView
        android:clickable="true"
        android:id="@+id/linkSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/source_code_location"
        android:theme="@style/front_text" />
    <TextView
        android:id="@+id/tvLicenseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
</LinearLayout>
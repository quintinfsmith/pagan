<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pagan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#171717</item>
        <item name="colorPrimaryVariant">#171717</item>
        <item name="colorOnPrimary">#EFEFEF</item>
        <item name="colorSecondary">@color/blue_sky</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">#1A1a1a</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <item name="alert_fg">@color/white</item>
        <item name="drawer_bg">#2D2D2D</item>
        <item name="main_bg">#2D2D2D</item>
        <item name="main_fg">#efefef</item>
        <item name="label_fg">@color/white</item>
        <item name="label_fg_focused">#000000</item>
        <item name="popup_fg">?attr/colorOnPrimary</item>
        <item name="popup_bg">?attr/colorPrimaryVariant</item>

        <item name="button_fg_default">?attr/colorOnPrimary</item>
        <item name="button_fg_pressed">?attr/colorOnPrimary</item>
        <item name="button_bg_default">?attr/colorPrimary</item>
        <item name="button_bg_pressed">#433947</item>

        <!-- LEAF COLORS -->
        <item name="leaf_fg_active">?attr/colorOnSecondary</item>
        <item name="leaf_fg_active_focused">@color/white</item>
        <item name="leaf_fg_active_pressed">@color/white</item>
        <item name="leaf_fg_active_focused_pressed">?attr/colorOnSecondary</item>

        <item name="leaf_bg_default">?attr/main_bg</item>
        <item name="leaf_bg_focused">@color/blue_sky</item>

        <item name="leaf_bg_invalid">#aa4433</item>
        <!-- Active Leaf colors are same between dark/light -->
        <item name="leaf_bg_active">@color/purple</item>
        <item name="leaf_bg_active_focused">@color/purple_plum</item>

        <item name="leaf_bg_linked">#FFDE7B</item>
        <item name="leaf_bg_focused_linked">#8BC34A</item>
        <item name="leaf_bg_active_linked">#FF9800</item>
        <item name="leaf_bg_active_focused_linked">#009688</item>
        <!-- END OF LEAF COLORS -->

        <item name="label_bg">?attr/leaf_bg_default</item>
        <item name="label_bg_channel_even">?attr/leaf_bg_default</item>
        <item name="label_bg_channel_odd">#304232</item>
        <item name="label_bg_focused">?attr/leaf_bg_focused</item>

        <item name="numberselector_bg_default">?attr/button_bg_default</item>
        <item name="numberselector_fg_default">?attr/button_fg_default</item>
        <item name="numberselector_bg_selected">?attr/leaf_bg_active</item>
        <item name="numberselector_fg_selected">?attr/leaf_fg_active</item>

        <item name="colorIconFG">@attr/button_fg_default</item>
        <item name="table_lines">?attr/button_fg_default</item>

        <item name="soundfont_warning_background">@color/blue_sky</item>
        <item name="soundfont_warning_frame">@color/white</item>
        <item name="soundfont_warning_text">@color/white</item>
        <item name="soundfont_warning_link">@color/blue_dark</item>
    </style>

    <style name="Theme.Pagan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pagan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Pagan.AlertDialog" parent="@style/AlertDialog" >
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="recycler_option" parent="button">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginBottom">@dimen/config_item_padding</item>
    </style>

    <style name="choose_percussion_button" parent="button">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="recycler_option_text">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="recycler_option_instrument" parent="recycler_option_text">
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="recycler_option_x" parent="recycler_option_text">
        <item name="android:gravity">center</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_number_selector" parent="button">
        <item name="android:paddingLeft">-3dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="icon_button" parent="button">
        <item name="android:paddingTop">@dimen/icon_button_padding_a</item>
        <item name="android:paddingLeft">@dimen/icon_button_padding_a</item>
        <item name="android:paddingRight">@dimen/icon_button_padding_b</item>
        <item name="android:paddingBottom">@dimen/icon_button_padding_b</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="song_config_button" parent="button">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="button_front" parent="@style/button">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="toggle_button" parent="@style/icon_button">
        <item name="android:padding">5sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edittext" parent="@android:style/Widget.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="leaf">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/leaf_selector</item>
    </style>
    <style name="ctl_leaf" parent="leaf">
        <item name="android:background">@drawable/ctl_leaf</item>
    </style>

    <style name="ctl_leaf_value" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/ctl_leaf_text_selector</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="leaf_value" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/leaf_text_selector</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="leaf_prefix" parent="@style/leaf_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="leaf_value_octave" parent="@style/leaf_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="leaf_value_offset" parent="@style/leaf_value">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="relativeSelector" parent="@style/button_number_selector">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="load_option" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AlertDialog.PositiveButton">
    </style>

    <style name="AlertDialog.NegativeButton">
    </style>

    <style name="AlertDialog" >
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="dialog_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="front_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="column_label">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/editor_label_column</item>
    </style>

    <style name="line_label">
        <item name="android:minWidth">41dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:background">@drawable/editor_label_line</item>
        <item name="android:layout_height">@dimen/line_height</item>
    </style>

    <style name="ctl_line_label">
        <item name="android:minWidth">41dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/editor_label_ctl_line</item>
        <item name="android:layout_height">@dimen/ctl_line_height</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="column">
        <item name="android:paddingBottom">@dimen/stroke_leaf</item>
    </style>

    <style name="corner_view">
        <item name="android:background">@drawable/corner_button</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="placeholder_outer">
    </style>
    <style name="cell_placeholder">
        <item name="android:background">@drawable/leaf_facade</item>
        <item name="android:tileMode">repeat</item>
    </style>
    <style name="link_mode_button">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

    </style>
    <style name="progress_bar">
        <item name="android:background">#33000000</item>
        <item name="android:indeterminateTint">@color/leaf_main</item>
    </style>

    <style name="tuning_map_item">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginBottom">@dimen/config_item_padding</item>
    </style>

    <style name="control_widget">
    </style>
    <style name="tempo_widget_button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="tempo_widget_button.text">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="volume_widget" parent="control_widget">
    </style>
    <style name="volume_widget_button">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="pan_widget" parent="control_widget">
    </style>
    <style name="pan_value">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    <style name="about_link">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="about_link_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="about_link_url">
        <item name="android:gravity">center</item>
    </style>
    <style name="popup_theme">
        <item name="android:textColor">#FF0000</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="recycler_option" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_fg</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5sp</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="button" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_fg</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:colorControlHighlight">#88FFFFFF</item>
    </style>

    <style name="icon_button" parent="@style/button">
        <item name="android:padding">10sp</item>
        <item name="android:tint">@color/button_fg</item>
    </style>

    <style name="config_button" parent="@style/icon_button">
        <item name="android:padding">10sp</item>
        <item name="android:tint">@color/button_fg</item>
    </style>

    <style name="button_front" parent="@style/button">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="toggle_button" parent="@style/icon_button">
        <item name="android:colorButtonNormal">?attr/button_bg_default</item>
        <item name="android:colorControlHighlight">?attr/button_bg_pressed</item>
        <item name="android:padding">5sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edittext" parent="@android:style/Widget.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@attr/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="leaf" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/leaf_fg</item>
        <item name="android:background">@color/leaf_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="leaf_prefix" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="leaf_value" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="leaf_value_octave" parent="@style/leaf_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="leaf_value_offset" parent="@style/leaf_value">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="numberSelector" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@color/numberselector_bg</item>
        <item name="android:textColor">@color/numberselector_fg</item>
    </style>

    <style name="relativeSelector" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>

        <item name="android:background">@color/numberselector_bg</item>
        <item name="android:textColor">@color/numberselector_fg</item>
    </style>

    <style name="load_option" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AlertDialog.PositiveButton">
        <item name="android:textColor">@color/button_fg</item>
        <item name="android:backgroundTint">?attr/button_bg_default</item>
        <item name="android:color">@null</item>
    </style>

    <style name="AlertDialog.NegativeButton">
        <item name="android:textColor">?attr/main_fg</item>
        <item name="android:background">#00000000</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:color">@null</item>
    </style>

    <style name="AlertDialog" >
        <item name="android:windowIsFloating">true</item>
        <item name="android:popupBackground">?attr/main_bg</item>
        <item name="android:colorBackground">?attr/main_bg</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialog.PositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialog.NegativeButton</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">?attr/popup_bg</item>
        <item name="android:colorBackground">?attr/popup_bg</item>
        <item name="android:itemBackground">?attr/popup_bg</item>
        <item name="android:textColor">?attr/popup_fg</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="front_text">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="column_label_inner">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/label_bg</item>
        <item name="android:textColor">@color/label_fg</item>
    </style>

    <style name="column_label_outer">
        <item name="android:paddingStart">@dimen/normal_padding</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">@dimen/normal_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/table_lines</item>
    </style>

    <style name="line_label_inner">
        <item name="android:minWidth">32dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:background">@color/label_bg</item>
        <item name="android:textColor">@color/label_fg</item>
    </style>

    <style name="line_label_outer">
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:paddingEnd">@dimen/normal_padding</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/table_lines</item>
    </style>
</resources>

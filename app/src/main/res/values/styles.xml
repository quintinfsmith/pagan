<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="recycler_option" parent="Theme.Pagan.Button">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginBottom">@dimen/config_item_padding</item>
    </style>

    <style name="choose_percussion_button" parent="Theme.Pagan.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="recycler_option_instrument" parent="Theme.Pagan.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Corner.Left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inset">0dp</item>
    </style>

    <style name="recycler_option_x" parent="Theme.Pagan.IconButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Corner.Right</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="button_labelled_inner">
        <item name="android:tint">@color/button_text_selector</item>
        <item name="android:textColor">@color/button_text_selector</item>
    </style>

    <style name="button_number_selector">
        <item name="android:stateListAnimator">@animator/number_selector_button</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/number_selector_button</item>
        <item name="android:textColor">@color/number_select_button_text_selector</item>
        <item name="android:fontFamily">@font/fira_sans</item>
    </style>

    <style name="icon_button" parent="Theme.Pagan.Button">
        <item name="android:paddingTop">@dimen/icon_button_padding_a</item>
        <item name="android:paddingLeft">@dimen/icon_button_padding_a</item>
        <item name="android:paddingRight">@dimen/icon_button_padding_b</item>
        <item name="android:paddingBottom">@dimen/icon_button_padding_b</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="song_config_button" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:stateListAnimator">@animator/std_button</item>
        <item name="android:layout_width">@dimen/config_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inset">0dp</item>
        <item name="cornerRadius">@dimen/config_icon_corner</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/config_icon_size</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="song_config_channel_button" parent="song_config_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="iconPadding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="iconSize">@dimen/channel_cfg_icon_size</item>
    </style>

    <style name="contextmenu_button" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:stateListAnimator">@animator/std_button</item>
        <item name="android:layout_width">@dimen/icon_button_width</item>
        <item name="android:layout_height">@dimen/icon_button_height</item>
        <item name="android:inset">0dp</item>
        <item name="cornerRadius">@dimen/contextmenu_icon_corner</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/context_icon_size</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="corner_button">
        <item name="android:padding">5sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inset">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/context_icon_size</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="leaf">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/leaf</item>
    </style>
    <style name="ctl_leaf" parent="leaf">
        <item name="android:background">@drawable/ctl_leaf</item>
    </style>

    <style name="ctl_leaf_value" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/ctl_leaf_text_selector</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="leaf_value" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/leaf_text_selector</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="leaf_prefix" parent="@style/leaf_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="leaf_value_octave" parent="@style/leaf_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="leaf_value_offset" parent="@style/leaf_value">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="relativeSelector" parent="@style/button_number_selector">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="load_option" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="dialog_title">
        <item name="android:textColor">@color/on_surface_container</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">300</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="front_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="column_label">
        <item name="font">@font/fira_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/editor_label_column</item>
        <item name="android:textColor">@color/column_label_text</item>
    </style>

    <style name="line_label">
        <item name="android:minWidth">@dimen/base_leaf_width</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:background">@drawable/editor_label_line</item>
        <item name="android:layout_height">@dimen/line_height</item>
    </style>
    <style name="line_label_text">
        <item name="font">@font/fira_sans</item>
        <item name="android:textColor">@color/line_label_text</item>
    </style>

    <style name="ctl_line_label">
        <item name="font">@font/fira_sans</item>
        <item name="android:minWidth">41dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/editor_label_ctl_line</item>
        <item name="android:layout_height">@dimen/ctl_line_height</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:tint">@color/line_label_ctl_text</item>
    </style>

    <style name="column">
        <item name="android:paddingBottom">@dimen/stroke_leaf</item>
    </style>

    <style name="corner_view">
        <item name="android:clickable">false</item>
        <item name="android:tint">@color/main_foreground</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="placeholder_outer"> </style>

    <style name="cell_placeholder">
        <item name="android:background">@drawable/leaf_facade</item>
        <item name="android:tileMode">repeat</item>
    </style>

    <style name="radio_button">
        <item name="android:stateListAnimator">@animator/std_button</item>
        <item name="android:textColor">@color/radio_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
    </style>

    <style name="radio_button_start" parent="radio_button">
        <item name="android:background">@drawable/radio_flat_start</item>
    </style>

    <style name="radio_button_center" parent="radio_button">
        <item name="android:background">@drawable/radio_flat</item>
    </style>
    <style name="radio_button_end" parent="radio_button">
        <item name="android:background">@drawable/radio_flat_end</item>
    </style>

    <style name="progress_bar">
        <item name="android:indeterminateTint">@color/leaf_main</item>
    </style>

    <style name="tuning_map_item">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:layout_marginBottom">@dimen/config_item_padding</item>
    </style>
    <style name="tuning_map_item_label">
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="control_widget">
    </style>
    <style name="tempo_widget_button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="tempo_widget_button.text">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="volume_widget" parent="control_widget"></style>
    <style name="volume_widget_button" parent="icon_button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="pan_widget" parent="control_widget">
    </style>
    <style name="pan_value">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    <style name="about_link">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <style name="about_link_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="about_link_url">
        <item name="android:gravity">center</item>
    </style>

    <style name="contextmenu_primary">
        <item name="android:background">@drawable/contextmenu_primary</item>
        <item name="android:backgroundTint">@color/main_background</item>
        <item name="android:layout_width">@dimen/contextmenu_primary_width</item>
        <item name="android:layout_height">@dimen/contextmenu_primary_height</item>
    </style>

    <style name="contextmenu_primary_inner">
        <item name="android:layout_width">@dimen/contextmenu_primary_inner_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/contextmenu_primary_padding_top</item>
        <item name="android:layout_marginBottom">@dimen/contextmenu_primary_padding_bottom</item>
        <item name="android:layout_marginStart">@dimen/contextmenu_primary_padding_start</item>
        <item name="android:layout_marginEnd">@dimen/contextmenu_primary_padding_end</item>
    </style>

    <style name="contextmenu_secondary">
        <item name="android:background">@drawable/contextmenu_secondary</item>
        <item name="android:backgroundTint">@color/main_background</item>
        <item name="android:layout_width">@dimen/contextmenu_secondary_width</item>
        <item name="android:layout_height">@dimen/contextmenu_secondary_height</item>
    </style>

    <style name="contextmenu_secondary_inner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/contextmenu_secondary_padding_top</item>
        <item name="android:layout_marginBottom">@dimen/contextmenu_secondary_padding_bottom</item>
        <item name="android:layout_marginStart">@dimen/contextmenu_secondary_padding_start</item>
        <item name="android:layout_marginEnd">@dimen/contextmenu_secondary_padding_end</item>
    </style>
    <style name="tail_space">
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">@dimen/trailing_space_width</item>
    </style>

    <style name="landing_button" parent="Theme.Pagan.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:stateListAnimator">@animator/std_button</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="recycler_option" parent="button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_fg</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginBottom">@dimen/config_item_padding</item>
    </style>
    <style name="choose_percussion_button" parent="button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="recycler_option_text">
        <item name="android:textColor">@color/button_fg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="recycler_option_instrument" parent="recycler_option_text">
    </style>

    <style name="recycler_option_x" parent="recycler_option_text">
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="button" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_fg</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="icon_button" parent="button">
        <item name="android:padding">8dp</item>
    </style>

    <style name="config_button" parent="@style/icon_button">
        <item name="android:height">42dp</item>
    </style>

    <style name="button_front" parent="@style/button">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="toggle_button" parent="@style/icon_button">
        <item name="android:colorButtonNormal">?attr/button_bg_default</item>
        <item name="android:colorControlHighlight">?attr/button_bg_pressed</item>
        <item name="android:padding">5sp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edittext" parent="@android:style/Widget.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@attr/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="leaf">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/leaf_fg</item>
        <item name="android:background">@drawable/leaf</item>
    </style>

    <style name="leaf_value" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/leaf_fg</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="leaf_prefix" parent="@style/leaf_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="leaf_value_octave" parent="@style/leaf_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="leaf_value_offset" parent="@style/leaf_value">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="numberSelectorButton">
        <item name="android:clickable">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">0dp</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/number_selector_button</item>
    </style>

    <style name="relativeSelector" parent="@android:style/Widget.TextView">
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>

        <item name="android:background">@color/numberselector_bg</item>
        <item name="android:textColor">@color/numberselector_fg</item>
    </style>

    <style name="load_option" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AlertDialog.PositiveButton">
        <item name="android:textColor">@color/button_fg</item>
        <item name="android:backgroundTint">?attr/button_bg_default</item>
        <item name="android:color">@null</item>
    </style>

    <style name="AlertDialog.NegativeButton">
        <item name="android:textColor">?attr/main_fg</item>
        <item name="android:background">#00000000</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:color">@null</item>
    </style>

    <style name="AlertDialog" >
        <item name="android:windowIsFloating">true</item>
        <item name="android:popupBackground">@color/dark_main_bg</item>
        <item name="android:colorBackground">@color/dark_main_bg</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialog.PositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialog.NegativeButton</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">?attr/popup_bg</item>
        <item name="android:colorBackground">?attr/popup_bg</item>
        <item name="android:itemBackground">?attr/popup_bg</item>
        <item name="android:textColor">?attr/popup_fg</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="front_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="column_label">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/editor_label</item>
        <item name="android:textColor">@color/label_fg</item>
    </style>

    <style name="line_label">
        <item name="android:minWidth">41dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textColor">@color/leaf_fg</item>
        <item name="android:background">@drawable/editor_label_line</item>
        <item name="android:layout_height">@dimen/line_height</item>
    </style>

    <style name="column">
        <item name="android:paddingBottom">@dimen/stroke_leaf</item>
        <item name="android:background">@color/dark_main_bg</item>
    </style>

    <style name="corner_view">
        <item name="android:background">@drawable/corner_button</item>
        <item name="android:padding">8dp</item>
        <item name="android:colorControlHighlight">#88FFFFFF</item>
    </style>

    <style name="placeholder_outer">
        <item name="android:background">@color/dark_main_bg</item>
    </style>
    <style name="cell_placeholder">
        <item name="android:background">@drawable/leaf_facade</item>
        <item name="android:tileMode">repeat</item>
    </style>
    <style name="link_mode_button">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>

    </style>1G
    <style name="progress_bar">
        <item name="android:background">#33000000</item>
    </style>

    <style name="tuning_map_item">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/button_fg</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@color/numberselector_bg</item>
        <item name="android:layout_marginBottom">@dimen/config_item_padding</item>
    </style>

</resources>

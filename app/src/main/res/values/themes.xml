<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pagan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#30260e</item>
        <item name="colorPrimaryVariant">#453F2F</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_sky</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">#1A1a1a</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <item name="alert_fg">?attr/colorPrimary</item>
        <item name="drawer_bg">#E0E0E0</item>
        <item name="main_fg">#2d2d2d</item>
        <item name="label_fg">#1d1d1d</item>
        <item name="label_fg_focused">#000000</item>
        <item name="popup_fg">?attr/colorPrimary</item>
        <item name="popup_bg">#FFFFFF</item>

        <item name="button_fg_default">@color/white</item>
        <item name="button_fg_pressed">#CCCCCC</item>
        <item name="button_bg_default">?attr/colorPrimary</item>
        <item name="button_bg_pressed">?attr/colorPrimaryVariant</item>
        <item name="button_stroke_color">#00423B2D</item>

        <item name="label_bg">?attr/leaf_bg_default</item>
        <item name="label_bg_focused">?attr/leaf_bg_focused</item>

        <item name="numberselector_bg_default">?attr/button_bg_default</item>
        <item name="numberselector_bg_second">#222633</item>
        <item name="numberselector_fg_default">?attr/button_fg_default</item>
        <item name="numberselector_bg_selected">?attr/leaf_bg_active</item>
        <item name="numberselector_fg_selected">?attr/leaf_fg_active</item>

        <item name="colorIconFG">@attr/button_fg_default</item>

        <item name="soundfont_warning_background">@color/blue_sky</item>
        <item name="soundfont_warning_frame">@color/blue_dark</item>
        <item name="soundfont_warning_text">@color/white</item>
        <item name="soundfont_warning_link">@color/blue_dark</item>

        <item name="drop_down_bg">#FFFFFF</item>
    </style>

    <style name="Theme.Pagan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pagan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pagan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Pagan.AlertDialog" parent="@style/AlertDialog">
    </style>

    <style name="Theme.Pagan.PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/purple_plum</item>
    </style>

</resources>
